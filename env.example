# Application Settings
APP_NAME="Hybrid Identity Monitoring System"
VERSION="1.0.0"
DEBUG=false

# Security Settings
SECRET_KEY="your-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Settings
DATABASE_URL="sqlite:///./identity_monitoring.db"
# For PostgreSQL: postgresql://user:password@localhost/identity_monitoring

# Redis Settings
REDIS_URL="redis://localhost:6379"

# Deepfake Detection Settings
DEEPFAKE_MODEL_PATH="./models/deepfake_detector.h5"
FACE_DETECTION_MODEL="mediapipe"
CONFIDENCE_THRESHOLD=0.8

# Video Processing Settings
MAX_VIDEO_SIZE_MB=100
MAX_VIDEO_DURATION_SECONDS=300
FRAME_EXTRACTION_INTERVAL=30

# Hybrid Deployment Settings
DEPLOYMENT_MODE="hybrid"
CLOUD_ENDPOINT="https://cloud.identity-monitoring.com"
ON_PREM_ENDPOINT="http://localhost:8000"

# Monitoring Settings
MONITORING_INTERVAL_SECONDS=60
ALERT_THRESHOLD_ANOMALY_SCORE=0.7

# API Settings
API_HOST="0.0.0.0"
API_PORT=8000

# Logging Settings
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# External Services (Optional)
# CLOUD_STORAGE_URL="https://storage.googleapis.com/your-bucket"
# EMAIL_SERVICE_URL="https://api.sendgrid.com/v3"
# SMS_SERVICE_URL="https://api.twilio.com"
